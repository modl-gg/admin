{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./shared/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": [
    "../server/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../client"
  ]
} 